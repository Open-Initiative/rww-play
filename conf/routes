#Home page with doc
GET           /                                        controllers.Subdomains.index
GET           /srv/createSubdomain                     controllers.Subdomains.createSubdomain
POST          /srv/createUserSpaceRequest              controllers.Subdomains.createUserSpaceRequest
GET           /srv/subdomainWaitingConfirmation        controllers.Subdomains.subdomainWaitingConfirmation
GET           /srv/confirmSubdomain                    controllers.Subdomains.confirmSubdomain
GET           /srv/createCertificate                   controllers.Subdomains.createCertificate


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                            controllers.Assets.at(path="/public", file)

GET           /2013                                    controllers.ReadWriteWebApp.about
GET           /2013/$file<.*>                          controllers.ReadWriteWebApp.get(file)
PUT           /2013/$file<.*>                          controllers.ReadWriteWebApp.put(file)
POST          /2013/$file<.*>                          controllers.ReadWriteWebApp.post(file)
DELETE        /2013/$file<.*>                          controllers.ReadWriteWebApp.delete(file)
#MKCOL        /2013/$file<.*>                          controllers.ReadWriteWebApp.mkcol(file)
PATCH         /2013/$file<.*>                          controllers.ReadWriteWebApp.patch(file)
HEAD          /2013/$file<.*>                          controllers.ReadWriteWebApp.head(file)

POST          /srv/certgen                             controllers.ClientCertificateApp.generate
GET           /srv/certgen                             controllers.ClientCertificateApp.get
GET           /srv/cors                                controllers.CORSProxy.action(url: Option[String])
GET           /srv/rdfViewer                           controllers.RDFViewer.htmlFor(url: String)
