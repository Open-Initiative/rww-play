# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /test/webid/:rg             controllers.Application.webId(rg)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /2012/*file                 org.www.readwriteweb.play.ReadWriteWeb_App.get(file)
PUT     /2012/*file                 org.www.readwriteweb.play.ReadWriteWeb_App.put(file)
POST    /2012/*file                 org.www.readwriteweb.play.ReadWriteWeb_App.post(file)

# GET     /srv/cors                   org.www.play.rdf.jena.jenaCORSProxy.get(url: String)

POST    /srv/certgen                controllers.ClientCertificateApp.generate
GET     /srv/certgen                controllers.ClientCertificateApp.get
