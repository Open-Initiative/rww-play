# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# set this if you want to proxy a web site ( say w3c.org to check out WebID )
#GET     /*rg                       controllers.AuthProxyApp.proxy(rg)

# Home page
GET     /test/webid/:rg             controllers.BasicApp.webId(rg)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /2012/*file                 org.www.readwriteweb.play.ReadWriteWeb_App.get(file)
PUT     /2012/*file                 org.www.readwriteweb.play.ReadWriteWeb_App.put(file)
POST    /2012/*file                 org.www.readwriteweb.play.ReadWriteWeb_App.post(file)

GET     /srv/cors                   org.www.play.rdf.jena.CORSProxy.get(url: String)

POST    /srv/certgen                controllers.ClientCertificateApp.generate
GET     /srv/certgen                controllers.ClientCertificateApp.get
